
<%= @user= User.new  %>
<div class="modal fade" id="modalRegisterForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
  <div class="modal-dialog" role="document">

    <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="modal-content">
        <div class="modal-header text-center">
          <h4 class="modal-title w-100 font-weight-bold">Sign up</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body mx-3">

          <div class="md-form mb-5">
            <i class="fas fa-user prefix grey-text"></i>
<!--            <input type="text" id="orangeForm-name" class="form-control validate">-->
            <label data-error="wrong" data-success="right" for="orangeForm-name">Your name</label>

            <%= f.text_field :name, class: "form-control validate" ,:placeholder=>"Your Name"%>
            <%#= f.label :name,"data-error" => "wrong", "data-success" => "right" %>
          </div>

          <div class="md-form mb-5">
            <i class="fas fa-envelope prefix grey-text"></i>

            <%= f.email_field :email, class: "form-control validate" ,:placeholder=>"Email"%>
            <%#= f.label :email,"data-error" => "wrong", "data-success" => "right" %>

          </div>

          <div class="md-form mb-4">
            <i class="fas fa-lock prefix grey-text"></i>
            <%#= f.label :password %>
            <%= f.password_field :password, :class=>"form-control validate" , :placeholder=>"Password"%>
            <%#= f.label :password,"data-error" => "wrong", "data-success" => "right" %>

          </div>

        </div>
        <div class="modal-footer d-flex justify-content-center">
          <button class="btn btn-default">Signup</button>
        </div>
      </div>
    <% end %>
  </div>
</div>

