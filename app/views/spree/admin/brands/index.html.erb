<% content_for :page_title do %>
  <%= Spree.t(:listing_brands) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_brand), new_object_url, class: 'btn-success', icon: 'add', id: 'admin_new_brand_link' %>
<% end if can?(:create, Spree::Brand) %>

<table class="table sortable" id="listing_brands" data-hook data-sortable-link="<%= update_positions_admin_brands_url %>">
  <thead>
    <tr data-hook="admin_brands_index_headers">
      <th class="no-border"></th>
      <th><%= t(:name, scope: 'activerecord.attributes.spree/brand') %></th>
      <th data-hook="admin_brands_index_header_actions" class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @brands.each do |brand| %>
      <tr id="<%= spree_dom_id brand %>" data-hook="admin_brands_index_rows" class="<%= cycle('odd', 'even')%>">
        <td class="move-handle"><span class="icon icon-move handle"></span></td>
        <td><%= link_to brand.name, edit_object_url(brand) %></td>
        <td data-hook="admin_brands_index_row_actions" class="actions text-right">
          <%= link_to_edit brand, no_text: true %>
          <%= link_to_delete brand, no_text: true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @brands %>
